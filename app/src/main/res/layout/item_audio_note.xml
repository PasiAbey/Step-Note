<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_background"
    android:layout_marginBottom="12dp"
    android:orientation="horizontal"
    android:padding="16dp"
    android:clickable="true"
    android:focusable="true"
    android:minHeight="80dp"
    android:foreground="?android:attr/selectableItemBackground">

    <!-- Audio Icon - Fixed Size -->
    <LinearLayout
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/audio_icon_background"
        android:gravity="center"
        android:layout_marginEnd="16dp"
        android:layout_gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🎧"
            android:textSize="24sp" />

    </LinearLayout>

    <!-- Audio Details - Expanded to fill more space -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="16dp">

        <!-- Title - Limited Characters -->
        <TextView
            android:id="@+id/tvAudioTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The History of Ancient Egypt"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Duration -->
        <TextView
            android:id="@+id/tvAudioDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="5 min"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Created Date -->
        <TextView
            android:id="@+id/tvCreatedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="2024-01-15"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:alpha="0.7"
            android:maxLines="1" />

        <!-- Play Indicator Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Tap to play"
            android:textColor="@color/flashcard_blue"
            android:textSize="11sp"
            android:maxLines="1"
            android:alpha="0.8" />

    </LinearLayout>

    <!-- Delete Button - Fixed Size -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/btnDelete"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/delete_button_background"
            android:gravity="center"
            android:text="🗑️"
            android:textSize="16sp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackgroundBorderless" />

    </LinearLayout>

</LinearLayout>