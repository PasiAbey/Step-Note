<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/audio_player_background"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <!-- Status Bar Space -->
    <View
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/transparent" />

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/control_button_background"
            android:clickable="true"
            android:focusable="true"
            android:padding="12dp"
            android:src="@drawable/ic_back_arrow"
            android:contentDescription="Back"
            android:layout_marginEnd="16dp" />

        <!-- Title Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Now Playing"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Audio Note"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <!-- Options Menu -->
        <ImageView
            android:id="@+id/btnOptions"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/control_button_background"
            android:clickable="true"
            android:focusable="true"
            android:padding="12dp"
            android:src="@drawable/ic_more_vert"
            android:contentDescription="Options" />

    </LinearLayout>

    <!-- Motion Detection Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/motion_card_background"
        android:padding="16dp"
        android:elevation="2dp">

        <ImageView
            android:id="@+id/btnMotionToggle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/motion_toggle_background"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            android:src="@drawable/ic_motion_off"
            android:layout_marginEnd="16dp"
            android:contentDescription="Toggle Motion Detection" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🏃 Motion Detection"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvMotionStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Auto-pause when you stop moving"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvMotionToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OFF"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:background="@drawable/toggle_status_background"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:paddingEnd="8dp"
            android:paddingBottom="4dp" />

    </LinearLayout>

    <!-- Audio Artwork Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <!-- Large Audio Icon/Artwork -->
        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:background="@drawable/audio_artwork_background"
            android:gravity="center"
            android:elevation="8dp"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🎵"
                android:textSize="120sp"
                android:alpha="0.8" />

        </LinearLayout>

        <!-- Audio Title and Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tvAudioTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The History of Ancient Egypt"
                android:textColor="@color/text_primary"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvAudioSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Audio Note • Imported Today"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

    <!-- Progress and Controls Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/controls_section_background"
        android:padding="24dp"
        android:elevation="4dp">

        <!-- Progress Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="32dp">

            <!-- Seek Bar -->
            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:progressTint="@color/flashcard_blue"
                android:thumbTint="@color/flashcard_blue"
                android:progressBackgroundTint="@color/progress_background"
                android:minHeight="6dp"
                android:maxHeight="6dp" />

            <!-- Time Labels -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvCurrentTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0:00"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvTotalTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5:00"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <!-- Control Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <!-- Shuffle Button -->

            <!-- Previous Button -->
            <ImageView
                android:id="@+id/btnShuffle"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginEnd="24dp"
                android:alpha="0.7"
                android:background="@drawable/secondary_control_background"
                android:clickable="true"
                android:contentDescription="Shuffle"
                android:focusable="true"
                android:padding="16dp"
                android:src="@drawable/ic_shuffle" />

            <ImageView
                android:id="@+id/btnPrevious"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/control_button_background"
                android:clickable="true"
                android:focusable="true"
                android:padding="18dp"
                android:src="@drawable/ic_previous"
                android:layout_marginEnd="24dp"
                android:contentDescription="Previous"
                android:elevation="2dp" />

            <!-- Play/Pause Button -->
            <ImageView
                android:id="@+id/btnPlayPause"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/play_pause_button_background"
                android:clickable="true"
                android:focusable="true"
                android:padding="20dp"
                android:src="@drawable/ic_play"
                android:layout_marginEnd="24dp"
                android:contentDescription="Play/Pause"
                android:elevation="4dp" />

            <!-- Next Button -->
            <ImageView
                android:id="@+id/btnNext"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/control_button_background"
                android:clickable="true"
                android:focusable="true"
                android:padding="18dp"
                android:src="@drawable/ic_next"
                android:layout_marginEnd="24dp"
                android:contentDescription="Next"
                android:elevation="2dp" />

            <!-- Repeat Button -->
            <ImageView
                android:id="@+id/btnRepeat"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/secondary_control_background"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp"
                android:src="@drawable/ic_repeat"
                android:contentDescription="Repeat"
                android:alpha="0.7" />

        </LinearLayout>

        <!-- Additional Controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Speed Control -->
            <LinearLayout
                android:id="@+id/btnSpeedControl"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:background="@drawable/speed_control_background"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginEnd="16dp">

                <TextView
                    android:id="@+id/tvPlaybackSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.0x"
                    android:textColor="@color/flashcard_blue"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Volume Control -->
            <ImageView
                android:id="@+id/btnVolume"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/secondary_control_background"
                android:clickable="true"
                android:focusable="true"
                android:padding="12dp"
                android:src="@drawable/ic_volume_up"
                android:contentDescription="Volume"
                android:layout_marginEnd="16dp" />

            <!-- Timer/Sleep -->
            <ImageView
                android:id="@+id/btnTimer"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/secondary_control_background"
                android:clickable="true"
                android:focusable="true"
                android:padding="12dp"
                android:src="@drawable/ic_timer"
                android:contentDescription="Sleep Timer" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>